# Railway Backend Environment Variables
# Copy these to Railway dashboard environment variables

# Database
MONGODB_URI=your_mongodb_connection_string

# JWT
JWT_SECRET=your_jwt_secret_key

# OpenRouter AI
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_REFERRER=https://your-vercel-domain.vercel.app
OPENROUTER_TITLE=LifeBuddy
OPENROUTER_MODEL=deepseek/deepseek-r1:free

# Payment Gateways
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

CASHFREE_APP_ID=your_cashfree_app_id
CASHFREE_SECRET_KEY=your_cashfree_secret_key
CASHFREE_MODE=PRODUCTION

# Frontend URL (Your Vercel domain)
FRONTEND_URL=https://your-vercel-domain.vercel.app

# Telegram Bot (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# WhatsApp (Optional)
WHATSAPP_SANDBOX_CODE=your_whatsapp_code
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_token

# Environment
NODE_ENV=production
PORT=5001
