# Server Configuration
PORT=5001
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/lifebuddy

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=30d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_PROJECT_ID=lifebuddy-465009
GOOGLE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
GOOGLE_TOKEN_URI=https://oauth2.googleapis.com/token
GOOGLE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
GOOGLE_REDIRECT_URI=http://localhost:5001
GOOGLE_JAVASCRIPT_ORIGINS=http://localhost:5001

# Firebase Configuration (if using Firebase Auth)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email 

# OpenRouter API
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_MODEL=deepseek/deepseek-r1:free
# OpenRouter Configuration
OPENROUTER_REFERRER=http://localhost:5173
OPENROUTER_TITLE=LifeBuddy (Local)

# Firebase Admin SDK
GOOGLE_APPLICATION_CREDENTIALS=./path/to/your/firebase-service-account.json 

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
BACKEND_URL=http://localhost:5001 

# JWT secret for Telegram link tokens
JWT_SECRET=your-very-secret-key


# Email Configuration (for OTP verification)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password-here 

# PayPal Payments
# Set PAYPAL_ENVIRONMENT to 'sandbox' for testing or 'live' for production
PAYPAL_ENVIRONMENT=sandbox
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret